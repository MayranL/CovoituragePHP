{# templates/utilisateur/inscription.html.twig #}

{% include 'base.html.twig' %}

{% block content %}
    {% if error is defined and error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div style="margin-top: 5vw">
    <section class="">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
            <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
                <img class="w-8 h-8 mr-2" src="{{ asset('images/log.png') }}" alt="logo">
                Cocovoit
            </a>
            <div class="w-1/2 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
                        Créer un compte utilisateur
                    </h1>
                    <form class="space-y-4 md:space-y-6" method="POST" action="{{ path('app_register') }}">
                        {{ form_start(form) }}
                        {{ form_row(form.nom) }}
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password.first) }}
                        {{ form_row(form.password.second) }}
                        <div class="flex justify-center items-center">
                        {{ form_end(form) }}
                        </div>
                        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                            Déjà un compte ? <a href="{{ path('login') }}" class="font-medium text-primary-600 hover:underline blue:text-primary-500">Connectez vous ici</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
    </div>

{% endblock %}
