{# templates/utilisateur/inscription.html.twig #}

{% include 'base.html.twig' %}

{% block content %}
    {% if error is defined and error %}

        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    <div class="relative">
        <img style="width: 100%; height: 100%; object-fit: fill;" src="https://cdn.blablacar.com/kairos/assets/images/carpool_blablabus_small-aacb46bde375e3196927..svg" alt="" loading="eager" decoding="async" fetchpriority="high">
        <div class="absolute w-full top-0 right-0">
            <div class="container mx-auto py-8">
                <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
                    <h1 class="text-2xl font-bold mb-6">Recherche de trajet</h1>
                    <form action="{{ path('dashboard') }}" method="GET">
                        <div class="mb-4">
                            <label for="departure" class="block mb-2 font-medium">Ville de départ</label>
                            <input type="text" id="departure" name="departure" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                        <div class="mb-4">
                            <label for="destination" class="block mb-2 font-medium">Ville d'arrivée</label>
                            <input type="text" id="destination" name="destination" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                        <div class="mb-4">
                            <label for="date" class="block mb-2 font-medium">Date</label>
                            <input type="date" id="date" name="date" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                        <div class="mb-4">
                            <label for="seats" class="block mb-2 font-medium">Nombre de places</label>
                            <input type="number" id="seats" name="seats" class="w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                        </div>
                        <div class="flex justify-center">
                            <button type="submit" class="bg-indigo-500 text-white py-2 px-4 rounded-md hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Rechercher</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
