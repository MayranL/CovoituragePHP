                    <form class="space-y-4 md:space-y-6" method="POST" action="{{ path('modifier_annonce', {'id': id}) }}">
                        {{ form_start(form) }}
                        {{ form_row(form.villeDepart) }}
                        {{ form_row(form.villeArrive) }}
                        {{ form_row(form.date) }}
                        {{ form_row(form.prix) }}
                        {{ form_row(form.modeleV) }}
